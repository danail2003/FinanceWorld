@model UsersWithCoursesViewModel

@{
    this.ViewData["Title"] = "Evaluation";
    int counter = 1;
    int coursesCounter = 0;
}

<h1 class="text-center mt-3 mb-3">@this.ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Username</th>
            <th scope="col">Course</th>
            <th scope="col">Grade</th>
        </tr>
    </thead>
    <tbody>
       @foreach (var course in Model.Courses)
        {
            <tr>
                <th style="border-bottom: 1px solid #dee2e6;" scope="row">@counter</th>
                <td>@course.AddedByUser</td>
                
            </tr>
            counter++;
        }
    </tbody>
</table>
