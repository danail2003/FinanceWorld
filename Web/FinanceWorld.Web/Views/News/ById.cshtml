@using FinanceWorld.Common;
@model FinanceWorld.Web.ViewModels.News.NewsByIdViewModel
@{
    this.ViewData["Title"] = Model.Title;
}

<h1 class="text-center mt-3">@Model.Title</h1>
<p>@Model.CategoryName</p>
<hr />
<img src="@Model.ImageUrl" />
<p>@Model.Content</p>
@if (User.IsInRole(GlobalConstants.AdministratorRoleName))
{
    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <form method="post" id="deleteForm" asp-action="Delete" asp-route-id="@Model.Id">
    </form>
    <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
}

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete entry ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>