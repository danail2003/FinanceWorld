@model FinanceWorld.Web.ViewModels.News.AllNewsViewModel
@{
    this.ViewData["Title"] = "News";
}

<h1 class="mt-3 text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach (var news in Model.News)
    {
        <div class="col-sm-2 grid-margin">
            <div class="position-relative">
                <div class="rotate-img">
                    <img src="@news.ImageUrl" alt="@news.Title" class="img-fluid">
                </div>
            </div>
        </div>
        <div class="col-sm-4  grid-margin">
            <h2 class="mb-1 font-weight-600">
                @news.Title
                <a class="stretched-link" asp-action="ById" asp-route-id="@news.Id"></a>
            </h2>
            <div class="fs-13 mb-2">
                <span class="mr-2">@news.CategoryName </span>Added: @news.CreatedOnFormatted
            </div>
            <p class="pb-1 text-truncate">
                @news.Content
            </p>
        </div>
    }
</div>