@model FinanceWorld.Web.ViewModels.News.AllNewsViewModel
@{
    this.ViewData["Title"] = "News";
}

<h1 class="mt-3 text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach (var news in Model.News)
    {
        <div class="card col-md-3 mb-3" style="width: 18rem;">
            <img src="@news.ImageUrl" class="card-img-top pt-3" alt="@news.Title">
            <div class="card-body">
                <h5 class="card-title">@news.Title</h5>
                <p class="card-text">@news.CategoryName</p>
                <a asp-action="ById" asp-route-id="@news.Id" class="btn btn-primary">Go To News</a>
            </div>
        </div>
    }
</div>

<hr />
<partial name="_PaginationPartial" model="@Model">