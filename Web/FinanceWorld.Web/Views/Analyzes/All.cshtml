@model FinanceWorld.Web.ViewModels.Analyzes.AllAnalyzesViewModel
@{
    this.ViewData["Title"] = "Analyzes";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach (var analyze in Model.Analyzes)
    {
        <div class="card col-md-3 mb-3 mr-2" style="width: 18rem;">
            <img src="@analyze.Image" class="card-img-top pt-3" alt="@analyze.Title">
            <div class="card-body">
                <h5 class="card-title text-center">@analyze.Title</h5>
            </div>
            <div>
                <a class="btn btn-primary mb-3 d-flex justify-content-center" asp-action="ById" asp-route-id="@analyze.Id">See analyze</a>
            </div>
        </div>
    }
</div>

<hr />
<partial name="_PaginationPartial" model="@Model">
