@model FinanceWorld.Web.ViewModels.Analyzes.AnalyzeWithInfoViewModel
@{
    this.ViewData["Title"] = Model.Analyze.Title;
}
<h1 class="text-center mt-3">@this.ViewData["Title"]</h1>

<div class="text-center border mb-2 font-weight-bold">
    @Html.DisplayFor(x => x.AnalyzeWithInfo)
</div>

<div class="container-fluid mt-100" style="width: 90%">
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="media flex-wrap w-100" style="display: flex; justify-content: center;">
                        <img src="@Model.Analyze.Image" class="ui-w-40" alt="@Model.Analyze.Title" style="height: 500px;">
                        <p class="mt-4">@Model.Analyze.Description</p>
                        <div class="col-md-12 mt-2">
                            <div class="row text-muted small ml-3" style="display: flex; justify-content: center;">
                                <form id="antiForgery" method="post"></form>
                                <div class="mr-5">
                                    <a href="#" onclick="sendVote(`@Model.Analyze.Id`, true)">
                                        <i class="fa fa-thumbs-up" style="font-size: 20px;"></i>
                                    </a>
                                    <div id="likesCount">@Model.Analyze.LikesCount</div>
                                </div>
                                <div class="mr-5">
                                    <a href="#" onclick="sendVote(`@Model.Analyze.Id`, false)">
                                        <i class="fa fa-thumbs-down" style="font-size: 20px;"></i>
                                    </a>
                                    <div id="dislikesCount">@Model.Analyze.DislikesCount</div>
                                </div>
                                <div>
                                    <form method="post" asp-action="SendEmail" asp-route-id="@Model.Analyze.Id">
                                        <button class="btn btn-warning">Send Email</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function sendVote(analyzeId, isUpVote) {
            var antiForegeryToken = $('#antiForgery input[name=__RequestVerificationToken]').val();
            var json = { analyzeId, isUpVote };
            $.ajax({
                url: "/api/Votes",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                headers: { 'X-CSRF-TOKEN': antiForegeryToken },
                success: function (data) {
                    $("#likesCount").html(data.likesCount);
                    $("#dislikesCount").html(data.dislikesCount);
                }
            });
        }
    </script>
}