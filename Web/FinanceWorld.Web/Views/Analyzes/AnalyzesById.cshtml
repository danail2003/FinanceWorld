@model FinanceWorld.Web.ViewModels.Analyzes.AllAnalyzesViewModel
@{
    this.ViewData["Title"] = "My analyzes";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var analyze in Model.Analyzes)
    {
        <div class="col mb-4">
            <div class="card">
                <img src="@analyze.Image" class="card-img-top" alt="@analyze.Title">
                <div class="card-body">
                    <h5 class="card-title text-center">@analyze.Title</h5>
                    <p class="card-text text-truncate">@analyze.Description</p>
                </div>
                <ul class="list-unstyled d-flex justify-content-around">
                    <li class="d-inline">
                        <a class="btn btn-warning mb-2" asp-action="Edit" asp-route-id="@analyze.Id">Edit</a>
                    </li>
                    <li class="d-inline">
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@analyze.Id">Delete</a>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>

<hr />
<partial name="_PaginationPartial" model="@Model">