@model FinanceWorld.Web.ViewModels.Analyzes.AllAnalyzesViewModel
@{
    this.ViewData["Title"] = "My analyzes";
}

<h1 class="text-center">@this.ViewData["Title"]</h1>
<hr />
<div class="row">
    @foreach (var analyze in Model.Analyzes)
    {
        <div class="card col-md-3 mb-3" style="width: 18rem;">
            <img src="@analyze.Image" class="card-img-top pt-3" alt="@analyze.Title">
            <div class="card-body">
                <h5 class="card-title">@analyze.Title</h5>
                <p class="card-text">@analyze.Description</p>
            </div>
            <a class="btn btn-secondary mb-2" asp-action="Edit" asp-route-id="@analyze.Id">Edit</a>
            <form method="post" id="deleteForm" asp-action="Delete" asp-route-id="@analyze.Id">
            </form>
            <button class="btn btn-danger" data-toggle="modal" data-target="#deleteModal">Delete</button>
        </div>
    }
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Do you want to delete entry ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" onclick="deleteForm.submit()">Yes</button>
            </div>
        </div>
    </div>
</div>